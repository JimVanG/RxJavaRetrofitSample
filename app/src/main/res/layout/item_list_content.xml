<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       xmlns:tools="http://schemas.android.com/tools"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:layout_gravity="center"
                                       app:cardCornerRadius="4dp" app:cardUseCompatPadding="true"
                                       app:cardElevation="4dp" android:layout_margin="4dp"
                                       android:clickable="false"
                                       app:cardBackgroundColor="@android:color/background_light"
                                       android:animateLayoutChanges="true">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <TextView
                    android:id="@+id/nameId"
                    android:text="@string/name_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:textAppearance="?attr/textAppearanceListItem"
                    tools:text="@string/name_item" android:clickable="false"/>

            <TextView
                    android:id="@+id/usernameId"
                    android:text="@string/username_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:textAppearance="?attr/textAppearanceListItem"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
